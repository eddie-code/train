// 编辑流控规则对应说明
// sentinel
[
  {
    "resource": "doConfirm",  // 资源名称 @SentinelResource
    "limitApp": "default",  // 针对来源
    "grade": 1,  // 阈值类型
    "count": 100,   // 单机阈值
    "strategy": 0,    // 是否集群
    "controlBehavior": 0,   // 流控模式
    "clusterMode": false    // 流控效果
  },
  {
    "resource": "confirmOrderDo",
    "limitApp": "default",
    "grade": 1,
    "count": 4,
    "strategy": 0,
    "controlBehavior": 0,
    "clusterMode": false
  }
]

// sentinel-business-flow
// 测试预热

[
  {
    "resource": "hello",
    "limitApp": "default",
    "grade": 1,
    "count": 10,
    "strategy": 0,
    "controlBehavior": 1,
    "warmUpPeriodSec": 2,
    "clusterMode": false
  }
]

// sentinel-business-flow
// 测试排队等待 (只能选择QPS, 不能选择并发数)
// 和快速失败不同的是, 会有拒绝QPS的情况，而排队是按时间等待, 直到全部完成

[
  {
    "resource": "hello",
    "limitApp": "default",
    "grade": 1,
    "count": 10,
    "strategy": 0,
    "controlBehavior": 2,
    "maxQueueingTimeMs": 1000,
    "clusterMode": false
  }
]